<h1>筆記列表</h1>

<%= link_to "新增筆記", new_note_path %>

<table>
  <tr>
    <!-- <td>Author</td> -->
    <td>Title</td>
    <td>Edit</td>
  <% @notes.each do |note| %>
  <tr>

    <td>
      <%= link_to note.title, note_path(note) %>
    </td>
    <td>
      <%= link_to "編輯", edit_note_path(note) %>
    </td>
    <td>
      <%= link_to "刪除", note_path(note), method: 'delete', data: { confirm: "確定嗎？" } %>
    </td>
  </tr>
  <% end %>
</table>